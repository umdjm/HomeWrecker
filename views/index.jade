extends layout

block content
  div(ng-app="home-wrecker", ng-controller="AppController as appController" layout="row")
    md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id='left', md-is-locked-open="$mdMedia('gt-md')")
      md-toolbar.md-theme-indigo
        md-button.md-primary
          image(height='120px', width='120px', src='/images/icons/lipstick_lips_stick_cosmetics_makeup_fashion_beauty_product_accessories_glamour_flat_design_icon-512.png')
        h1.md-toolbar-tools Home Wrecker
      md-content
        div.user(ng-if='appController.isAuthenticated()')
          img(src="{{appController.user.photos[0].value}}")
          span {{appController.user.displayName}}
          span(flex)
          md-button(ng-href='/api/logout').md-icon-button(aria-label='More')
            ng-md-icon(icon='logout')
        div.login(ng-if="!appController.isAuthenticated()")
          h3 Login
          a.sc-btn.sc--facebook(href='/auth/facebook')
            span.sc-icon
              svg(viewbox='0 0 33 33', width='25', height='25', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink')
                g
                  path(d='M 17.996,32L 12,32 L 12,16 l-4,0 l0-5.514 l 4-0.002l-0.006-3.248C 11.993,2.737, 13.213,0, 18.512,0l 4.412,0 l0,5.515 l-2.757,0 c-2.063,0-2.163,0.77-2.163,2.209l-0.008,2.76l 4.959,0 l-0.585,5.514L 18,16L 17.996,32z')
            span.sc-text
              | Share on Facebook
        md-divider
        md-button.md-primary(ng-click='close()', hide-gt-md='')
          | Close Sidenav Left
        p(hide-md='', show-gt-md='')
          | This sidenav is locked open on your device. To go back to the default behavior,
          | narrow your display.

    div(class="layout-padding layout-column", layout="column", flex)
      main(ng-cloak, layout="column", layout-fill, ui-view)
